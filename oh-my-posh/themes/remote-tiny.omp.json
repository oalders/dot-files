{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 2,
  "final_space": true,
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "foreground": "#193549",
          "background": "#707880",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b0",
          "template": " {{ if .SSHSession }}\udb80\udf18 {{ end }} ",
          "properties": {
            "display_host": false,
            "display_user": false
          }
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#193549",
          "background": "#5f819d",
          "template": " \udb80\ude4b  {{ .Path }} ",
          "properties": {
            "folder_separator_icon": " \ue0b1 ",
            "home_icon": "~",
            "style": "folder"
          }
        },
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#193549",
          "background": "#83769c",
          "template": "<transparent>\ue0b0</> {{ .FormattedMs }}\u2800",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "exit",
          "style": "diamond",
          "foreground": "#193549",
          "background": "#8abeb7",
          "background_templates": [
            "{{ if gt .Code 0 }}#BF616A{{ end }}"
          ],
          "trailing_diamond": "\ue0b4",
          "template": "<#83769c>\ue0b0</> â™¥ ",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    }
  ]
}
